<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_top_list"
    android:background="@drawable/custom_background_comments"
    android:padding="@dimen/padding_list_items"
    android:layout_marginStart="@dimen/margin_start_list"
    android:layout_marginEnd="@dimen/margin_start_list"
    >

    <TextView
        android:id="@+id/tvUserComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/title_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:textColor="@color/persian_indigo"
        android:layout_marginStart="@dimen/margin_start_list"
        android:layout_marginTop="@dimen/margin_top_list"
        android:singleLine="false"
        android:maxLines="4"
        />

    <TextView
        android:id="@+id/tvCommentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvUserComment"
        android:textColor="@color/rich_black"
        android:layout_marginTop="@dimen/margin_start_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>